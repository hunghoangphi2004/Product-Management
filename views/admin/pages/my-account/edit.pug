extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(5000)
    +alert-success(5000)
    h1 Cập nhật thông tin cá nhân

    form(action=`${prefixAdmin}/my-account/edit?_method=PATCH` method="POST" enctype="multipart/form-data")
        //- Họ tên
        div(class="form-group")
            label(for="fullname") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullname"
                name="fullname"
                value=user.fullname
                required
            )

        //- Email
        div(class="form-group")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                value=user.email
                required
            )

        //- Mật khẩu
        div(class="form-group")
            label(for="password") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )

        //- Số điện thoại
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
            )

        //- Avatar
        div(class="form-group upload-image")
            label(for="avatar") Avatar
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            if user.avatar
                img(
                    src=user.avatar
                    class="image-preview"
                    upload-image-preview
                )

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật

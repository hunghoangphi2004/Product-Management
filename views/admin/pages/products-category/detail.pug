extend ../../layouts/default.pug

block main 
    h1 Chi tiết danh mục sản phẩm

    if (productCategory.title)
    h1(class="mb-4") #{productCategory.title}

    if (productCategory.parent)
        div(class="mb-4") Danh mục cha: <b>#{productCategory.parent}</b>

    if (productCategory.thumbnail)
        div(class="mb-4")
        img(
            src=productCategory.thumbnail
            style="width: 100px"
        )

    if (productCategory.status)
        div(class="mb-4")
        span Trạng thái:
        if (productCategory.status === "active")
            span(class="btn btn-success") Hoạt động
        else
            span(class="btn btn-danger") Ngưng hoạt động

    if (productCategory.position)
        div(class="mb-4") Vị trí: <b>#{productCategory.position}</b>

    if (productCategory.description)
        div(class="mb-4") Mô tả: <b>!{productCategory.description}</b>

    a( 
        href = `${prefixAdmin}/productCategorys/edit/${productCategory.id}`
        class="btn btn-warning btn-sm") Sửa

    script(src="admin/js/productCategory.js")
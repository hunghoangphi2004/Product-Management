mixin pagination(pagination)
  nav
    ul.pagination
      //- Nút Prev
      li(class=`page-item ${pagination.currentPage == 1 ? "disabled" : ""}`)
        button.page-link(type="button" button-pagination=`${pagination.currentPage - 1}`) Prev

      //- Các trang
      - for (var i = 1; i <= pagination.totalPage; i++)
        li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
          button.page-link(type="button" button-pagination=`${i}`) #{i}

      //- Nút Next
      li(class=`page-item ${pagination.currentPage == pagination.totalPage ? "disabled" : ""}`)
        button.page-link(type="button" button-pagination=`${pagination.currentPage + 1}`) Next

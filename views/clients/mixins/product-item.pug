mixin product-item(item)
    .col-lg-4.col-md-6.col-12.mb-4
        .product-item
            .inner-image
                img(src=item.thumbnail, alt=item.title)
                if(item.featured=="1")
                    .inner-featured Nổi bật
            .inner-content
                h3.inner-title
                    a(href=`/products/detail/${item.slug}`) #{item.title}
                .inner-price-new #{item.priceNew} vnđ
                .inner-price-old #{item.price} vnđ
                .inner-discount #{item.discountPercentage}%
            .inner-footer.text-center.my-3
                a.btn.btn-primary(href=`/products/detail/${item.slug}`) Xem chi tiết
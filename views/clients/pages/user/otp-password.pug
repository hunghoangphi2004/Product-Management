extends ../../layouts/default.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1.text-center Nhập mã OTP xác thực
        form(action="/user/password/otp" method="POST")
          .form-group
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
              value=email
              readonly
            )

          .form-group
            label(for="otp") Mã OTP
            input(
              type="text"
              class="form-control"
              id="otp"
              name="otp"
              required
            )

          button.btn.btn-primary.mt-3(type="submit") Xác nhận

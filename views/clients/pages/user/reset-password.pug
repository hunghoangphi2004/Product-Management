extends ../../layouts/default.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-8
        h1.text-center Đổi mật khẩu mới
        form(action="/user/password/reset" method="POST")
          .form-group
            label(for="password") Mật khẩu mới
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )

          .form-group
            label(for="confirmPassword") Xác nhận mật khẩu
            input(
              type="password"
              class="form-control"
              id="confirmPassword"
              name="confirmPassword"
              required
            )

          .form-group
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đổi mật khẩu

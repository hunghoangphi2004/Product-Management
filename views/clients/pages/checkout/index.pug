extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    .container.my-3
        .row
            .col-12
                +box-head("Đặt hàng")

        .row
            .col-12
                table.table.table-bordered
                    thead
                        tr
                            th STT
                            th Ảnh
                            th Tên
                            th Giá
                            th Số lượng
                            th Tổng tiền
                    tbody
                        if cartDetail && cartDetail.products && cartDetail.products.length > 0
                            each item, index in cartDetail.products
                                tr
                                    td #{index + 1}
                                    td 
                                        img(src=item.productInfo.thumbnail, alt=item.productInfo.title, width="80px")
                                    td 
                                        p #{item.productInfo.title}
                                    td #{item.productInfo.priceNew}$
                                    td
                                        input(
                                            type="number", 
                                            name="quantity", 
                                            value=item.quantity, 
                                            min="1", 
                                            product-id=item.product_id,
                                            style="width: 60px",
                                            readonly
                                        )
                                    td #{item.totalPrice}$
                        else
                            tr
                                td(colspan="7" class="text-center") Không có sản phẩm nào trong giỏ hàng

        .row.mt-3
            .col-12.text-right
                h3 Tổng đơn hàng: #{cartDetail.totalPrice || 0}$

        if (cartDetail.products.length > 0)
            .row
                .col-12
                    .card.p-4.my-4
                        form(action="/checkout/order" method="POST")
                            // Họ tên
                            div(class="form-group")
                                label(for="fullName") Họ tên
                                input(
                                    type="text", 
                                    class="form-control", 
                                    id="fullName", 
                                    name="fullName", 
                                    required
                                )

                            // Số điện thoại
                            div(class="form-group")
                                label(for="phone") Số điện thoại
                                input(
                                    type="text", 
                                    class="form-control", 
                                    id="phone", 
                                    name="phone", 
                                    required
                                )

                            // Địa chỉ
                            div(class="form-group")
                                label(for="address") Địa chỉ
                                input(
                                    type="text", 
                                    class="form-control", 
                                    id="address", 
                                    name="address", 
                                    required
                                )

                            // Nút đặt hàng
                            div(class="form-group")
                                button(
                                    type="submit", 
                                    class="btn btn-success btn-block"
                                ) ĐẶT HÀNG
        else
            .alert.alert-warning.mt-3
                | Giỏ hàng của bạn đang trống, không thể đặt hàng.
            
